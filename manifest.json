{
  "manifest_version": 3,
  "name": "Wordle Game Extension",
  "description": "Play Wordle directly in Chrome",
  "version": "1.0",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
